<%- include("partials/header") %>


   <h1>Home</h1>

   <P>
      <%= homeMsg %>

   </P>


   <div class="container-fluid">
      <div class="row">






         <% post.reverse().forEach(post => {%>
            <div class="col-sm-4 col-12 col-md-3 mb-3 mb-md-1 post  text-center">
               <h2>

                  <%=  post.title%>

               </h2>
               <p>
                  <%= _.truncate(post.body, {"length":50});   %>
               </p>

               <button class="btn btn-primary">  <a href="posts/<%=_.lowerCase(post.title) %>" class="text-white" style="text-decoration: none;"  >Read More</a> </button>

            </div>

            <%}); %>







      </div>
   </div>



   <%- include("partials/footer") %>